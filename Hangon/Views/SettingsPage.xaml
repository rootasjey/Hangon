<Page
    x:Class="Hangon.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Name="PivotSettings">
            <PivotItem x:Name="PivotPersonalization"
                       Header="personalization">
                <ScrollViewer Margin="0,20,0,0">
                    <StackPanel>
                        <StackPanel>
                            <TextBlock Text="language" FontSize="24"/>
                            <TextBlock Text="Choose your preferred language" Opacity=".6"/>
                            <ComboBox x:Name="LanguageSelection"
                                      Header="chosen language"
                                      SelectedIndex="0"
                                      Loaded="LanguageSelection_Loaded"
                                      SelectionChanged="LanguageSelection_SelectionChanged">
                                <ComboBoxItem Content="English"/>
                                <ComboBoxItem Content="Français"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="downloads" FontSize="24"/>
                            <TextBlock Text="Save downloads automatically to Pictures library" Opacity=".6"/>
                            <ToggleSwitch x:Name="ToggleAutoSaveDownloads"
                                          Loaded="ToggleAutoSaveDownloads_Loaded"
                                          Toggled="ToggleAutoSaveDownloads_Toggled"/>
                        </StackPanel>

                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Always download photo in the following resolution" Opacity=".6"/>
                            <ToggleSwitch x:Name="ToggleAutoDownloadsResolution"
                                          Loaded="ToggleAutoDownloadsResolution_Loaded"
                                          Toggled="ToggleAutoDownloadsResolution_Toggled"/>

                            <ComboBox x:Name="DefaultPhotoResolution"
                                      Margin="0,10,0,0"
                                      Visibility="Collapsed"
                                      Header="chosen resolution"
                                      Loaded="DefaultPhotoResolution_Loaded"
                                      SelectionChanged="DefaultPhotoResolution_SelectionChanged">
                                <ComboBoxItem Content="raw"/>
                                <ComboBoxItem Content="full"/>
                                <ComboBoxItem Content="regular"/>
                                <ComboBoxItem Content="small"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            
            <PivotItem Header="background tasks">
                <ScrollViewer>
                    <StackPanel Margin="0,0,0,40">
                        <StackPanel>
                            <TextBlock FontSize="24" Text="wallpaper"/>
                            <TextBlock Text="Periodically update wallpaper" 
                                       TextWrapping="Wrap" Opacity=".6"/>
                            <ToggleSwitch x:Name="WallSwitch"
                                      Toggled="WallSwitch_Toggled"/>

                            <ComboBox x:Name="WallIntervalUpdates"
                                      Header="period"
                                      Visibility="Collapsed"
                                      Margin="0, 20"
                                      SelectedIndex="2"
                                      SelectionChanged="WallIntervalUpdates_SelectionChanged">
                                <ComboBoxItem Content="15 min" Tag="15"/>
                                <ComboBoxItem Content="half an hour" Tag="30"/>
                                <ComboBoxItem Content="every hour" Tag="60"/>
                                <ComboBoxItem Content="every 3 hours" Tag="180"/>
                                <ComboBoxItem Content="every day" Tag="1380"/>
                            </ComboBox>

                            <StackPanel x:Name="WallTaskActivity" Margin="0,10" Visibility="Collapsed">
                                <TextBlock x:Name="LastUpdatedTask" Text="Never run" Opacity=".6"/>
                                <TextBlock x:Name="LastWallTaskError" Text="No error" Opacity=".6"/>

                                <StackPanel Margin="0,20,0,20">
                                    <TextBlock Text="If the task doesn't work properly, restart it" Opacity=".6"/>
                                    <Button Content="restart" Margin="0,10,0,0" Tapped="RestartWallTask_Tapped"/>
                                </StackPanel>
                            </StackPanel>
                            
                        </StackPanel>

                        <StackPanel Margin="0,20">
                            <TextBlock FontSize="24" Text="lockscreen"/>
                            <TextBlock Text="Periodically update lockscreen background" 
                                       TextWrapping="Wrap" Opacity=".6"/>
                            <ToggleSwitch x:Name="LockscreenSwitch"
                                      Toggled="LockscreenSwitch_Toggled"/>


                            <ComboBox x:Name="LockscreenIntervalUpdates"
                                      Header="period"
                                      Visibility="Collapsed"
                                      Margin="0, 20"
                                      SelectedIndex="2"
                                      Loaded="LockscreenIntervalUpdates_Loaded"
                                      SelectionChanged="LockscreenIntervalUpdate_SelectionChanged">
                                <ComboBoxItem Content="15 min" Tag="15"/>
                                <ComboBoxItem Content="half an hour" Tag="30"/>
                                <ComboBoxItem Content="every hour" Tag="60"/>
                                <ComboBoxItem Content="every 3 hours" Tag="180"/>
                                <ComboBoxItem Content="every day" Tag="1380"/>
                            </ComboBox>

                            <StackPanel x:Name="LockscreenTaskActivity" Margin="0,10" Visibility="Collapsed">
                                <TextBlock x:Name="LastUpdatedLockscreenTask" Text="Never run" Opacity=".6"/>
                                <TextBlock x:Name="LastLockscreenTaskError" Text="No error" Opacity=".6"/>

                                <StackPanel Margin="0,20,0,20">
                                    <TextBlock Text="If the task doesn't work properly, restart it" Opacity=".6"/>
                                    <Button Content="restart" Margin="0,10,0,0" Tapped="RestartLockscreenTask_Tapped"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            
            <PivotItem Header="about">
                <ScrollViewer Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="feedback" FontSize="24"/>
                        <TextBlock Text="Send an email if you encounter issues or if you've suggestions"
                                   Opacity=".6" TextWrapping="Wrap"/>
                        <Button x:Name="FeedbackButton" 
                                Content="send a suggestion" 
                                Margin="0,12,0,20" 
                                Click="FeedbackButton_Click"/>

                        <TextBlock Text="notation" FontSize="24"/>
                        <TextBlock Text="Don't forget to give the app a note on the store ;)"
                                   TextWrapping="Wrap"
                                   Opacity=".6"/>
                        
                        <Button x:Name="NoteButton" 
                                Content="give a note" 
                                Margin="0,12,0,20" 
                                Visibility="Collapsed"
                                Click="NoteButton_Click"/>

                        <TextBlock Text="images" FontSize="24" Margin="0,20,0,0"/>
                        <RichTextBlock x:Name="ImagesBox" Margin="0,0,0,40" Opacity=".6">
                            <Paragraph>
                                All photos are from
                                <Hyperlink NavigateUri="https://unsplash.com/">Unsplash</Hyperlink>
                            </Paragraph>
                        </RichTextBlock>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>

    </Grid>
</Page>
